<script language="javascript">

function urlap_ellenorzes(f) {
    ok = 1;

    if( !f.elements["feltetelek"].checked )
    {
        ok = 0;
        uzenet = '{/literal}{$ford.feltetel_elfogadas}{literal}';
    }  
    
    
    if( ok == 0 ) {
        alert(uzenet);
   } else {
        f.submit();
   }
}

</script>

